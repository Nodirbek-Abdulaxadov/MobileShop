@{
    ViewData["Title"] = "Products Page";
}
@model IndexViewModel

<!-- product section -->

  <section class="product_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          Our Products
        </h2>
      </div>
      <div class="row">
            @foreach (var item in Model.Products)
            {
                
                string firstImagePath = "~/images/" + Model.Images.FirstOrDefault(img => img.ProductId == item.Id).Path;
                
                <div class="col-sm-6 col-lg-4">
                   <div class="box">
                    <div class="img-box">
                      <img src="@firstImagePath" asp-append-version="true" alt="">
                      <a asp-controller="home" asp-action="details"  asp-route-id="@item.Id"  class="add_cart_btn">
                        <span>
                             View more
                        </span>
                      </a>
                    </div>
                    <div class="detail-box">
                      <h5>
                        @item.MainCharacters.Name @item.MainCharacters.Model
                      </h5>
                      <div class="product_info">
                        <h5>
                          <span>$</span> @item.MainCharacters.Price
                        </h5>
                      </div>
                    </div>
                   </div>
                </div>
             }
      </div>
    </div>
  </section>

  <!-- end product section -->



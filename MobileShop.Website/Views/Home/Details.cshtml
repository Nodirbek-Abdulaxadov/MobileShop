    <h1 class="mt-5" style="text-align: center;">@Model.Product.MainCharacters.Name @Model.Product.MainCharacters.Model</h1>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <div id="carouselExampleIndicators" style=" height: 600px; width: 400px;" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                      
                        
                            @{
                                for (int i = 0; i < Model.Images.Count; i++)
                                {
                                    if (i == 0)
                                    {
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="active" aria-current="true" aria-label="Slide @i"></button>
                                    }
                                    else
                                    {
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" aria-current="true" aria-label="Slide @i"></button>
                                    }
                                }
                            }
                        
                    </div>
                    <div class="carousel-inner" style=" height: 600px; width: 400px;">
                      
                      @{
                            var list = Model.Images;
                            @for (int i = 0; i < list.Count; i++)
                            {
                                if (list[i].ProductId == Model.Product.Id)
                                {
                                    if (i == 0)
                                    {
                                        <div class="carousel-item active" >
                                           <img style="height: 600px;" src="@list[i].Path" asp-append-version="true" class="d-block" alt="...">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="carousel-item active" >
                                           <img style="height: 600px;"  src="@list[i].Path" asp-append-version="true"  class="d-block" alt="...">
                                        </div>
                                    }
                                }
                            }
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
